<idea-plugin>
    <id>com.github.mjok.cybenchintellij</id>
    <name>CyBench-Intellij</name>
    <vendor>CyBench</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>,
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="com.gocypher.cybench.runConfiguration.ConfigurationType"/>
        <runConfigurationProducer implementation="com.gocypher.cybench.runConfiguration.ClassConfigurationProducer"/>

        <runLineMarkerContributor language="JAVA" implementationClass="com.gocypher.cybench.runConfiguration.JmhRunLineMarkerContributor"/>
        <toolWindow factoryClass="com.gocypher.cybench.toolWindow.factories.ToolWindowFactory" icon="/icons/cyBench16.svg" id="CyBench report" anchor="bottom" canCloseContents="true"/>
        <toolWindow factoryClass="com.gocypher.cybench.toolWindow.factories.BrowseReportsToolWindowFactory" icon="/icons/cyBench16.svg" id="CyBench explorer" anchor="right"/>
    </extensions>


    <actions>
        <action id="com.gocypher.cybench.runConfiguration.RunAllCyBenchAnAction" class="com.gocypher.cybench.runConfiguration.RunAllCyBenchAnAction" text="Run all Benchmarks"
                description="Run all benchmarks with CyBench runner" icon="/actions/execute.svg">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>
        </action>
        <action id="com.gocypher.cybench.generate.CBGenerateAnAction" class="com.gocypher.cybench.generate.CBGenerateAnAction"
                text="CyBench benchmark">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
